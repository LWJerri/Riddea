version: '3.2'

services:
  bot:
    #image: docker.pkg.github.com/riddea/riddea/nightly:latest
    image: quay.io/riddea/riddea
    restart: always
    working_dir: /app/apps/bot
    env_file:
      - ./apps/bot/.env
    command: yarn start
    networks: 
      - layer
  api:
    #image: docker.pkg.github.com/riddea/riddea/nightly:latest
    image: quay.io/riddea/riddea
    restart: always
    working_dir: /app/apps/api
    env_file:
      - ./apps/api/.env
    depends_on:
      - bot
    command: yarn start
    networks: 
      - layer
    ports:
      - 3000:3000
